<div class="container">

    <div class="my-3">

        {{> userInfo}}

    </div>

    <div class="container">

        {{#each google_book_id}}
        {{> bookshelf}}
        {{/each}}

        <div class="d-flex flex-row justify-content-around">

            {{!-- <div>
                <!-- REFRESH BOOKSHELF -->
                <button href="/profile" type="button" class="btn" id="dust-off-shelf">Dust My
                    Bookshelf</button>
            </div> --}}
        </div>

    </div>
    
    <h3>What's On My Bookshelf:</h3>
    <h3 id="welcome"></h3>
    <div>
        <!-- MODAL TRIGGER BUTTON START -->
        <button type="button" class="btn" data-toggle="modal" data-target="#exampleModal">Add A New
        Book</button>
        <!-- END MODAL TRIGGER BUTTON -->
    </div>

</div>


<div class="container d-flex flex-row flex-wrap book-display">
    <!-- Where bookshelf will be generated -->
</div>

<!-- MODAL START -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">

    <div class="modal-dialog modal-lg" role="document">

        <div class="modal-content">

            <div class="modal-header">

                <h5 class="modal-title" id="exampleModalLabel"></h5>

                <form class="mx-auto">
                    <input type="text" id="book-title" placeholder="Enter a Title of a Book!" size="75">
                    <button type="submit" id="book-search">Search</button>
                </form>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="dust-off-shelf">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>

            <div class="modal-body">

                <div id="book-results" class="hidden"></div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>

        </div>

    </div>

</div>
<!-- END MODAL -->